<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Account Number"
        android:textColor=" #33A2FF "
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="italic"
        android:inputType="textPersonName" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Exp"
            android:textColor=" #33A2FF "
            android:textStyle="bold"
            android:textSize="18sp" />
        <Space android:layout_height="wrap_content" android:layout_width="120dp"/>

        <TextView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal|center"
            android:gravity="center_horizontal|center"
            android:text="CVV"
            android:textColor=" #33A2FF "
            android:textStyle="bold"
            android:textSize="18sp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Month"
            android:inputType="textPersonName"
            android:textStyle="italic"
            android:textColorHint="#33A2FF" />

        <Space android:layout_height="wrap_content" android:layout_width="50dp"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:inputType="textPersonName"
            android:textStyle="italic"
            android:textColorHint="#33A2FF" />
        <Space android:layout_height="wrap_content" android:layout_width="50dp"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:inputType="textPersonName" />

    </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Billing Address"
        android:textStyle="bold"
        android:textColor=" #33A2FF "
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:gravity="center"
            android:text="First Name"
            android:textColor="#33A2FF"
            android:textColorHint="#33A2FF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right|center_vertical|center"
            android:gravity="center"
            android:text="Last Name"
            android:textColor="#33A2FF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="2"
        android:layout_gravity="left|top"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:inputType="textPersonName"/>

        <EditText
            android:layout_width="180dp"
            android:layout_gravity="right|top"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:inputType="textPersonName"/>
    </GridLayout>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address"
        android:textStyle="italic"
        android:inputType="textPersonName"
        android:textColorHint="#33A2FF" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>