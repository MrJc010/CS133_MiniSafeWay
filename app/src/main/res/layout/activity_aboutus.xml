<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguye.minisafeway.Aboutus">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />"
    android:layout_weight="1"
    android:text="1. How to contact us?" />

    <TextView
        android:id="@+id/first_question"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="How to contact us:"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/first_answer"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="Customers can contact MiniSafeway Manager via: MiniSafway@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="What is this app about?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="This app provides customers a brand new experience of shopping. You can buy from a vast online market of products with just a tap of your thumb. This gives customer a seemless experience across our services."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/topic_question"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="What are the requirements needed for this app to work?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/second_answer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="In order to use our services, you need an android phone with Internet connection such as Wifi or Cellular. Note that: Internet connection may incur extra charges depending on your carrier of choice."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/third_question"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="How do you address customer's concerns regarding privacy and payment?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/third_answer"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="Customers' data will be handled carefully up to industry standards. We will not track your personal information or sell it to any third party company."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/home3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@android:color/white"
        app:srcCompat="@drawable/ic_home_black_24dp" />

</android.support.design.widget.CoordinatorLayout>
